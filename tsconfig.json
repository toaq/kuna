{
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"compilerOptions": {
		"target": "es2016",
		"lib": ["es2022", "dom"],
		"jsx": "react-jsx",
		"module": "Preserve",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"noImplicitAny": true
	}
}
